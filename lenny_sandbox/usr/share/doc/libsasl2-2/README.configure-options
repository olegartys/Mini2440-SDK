To build this package, configure was called as follows:
configure '--host=x86_64-linux-gnu' '--build=x86_64-linux-gnu' '--prefix=/usr' '--mandir=\${prefix}/share/man' '--infodir=\${prefix}/share/info' '--enable-static' '--enable-shared' '--enable-alwaystrue' '--enable-checkapop' '--enable-cram' '--enable-digest' '--enable-otp' '--disable-srp' '--disable-srp-setpass' '--disable-krb4' '--enable-gssapi' '--enable-gss_mutexes' '--enable-auth-sasldb' '--enable-plain' '--enable-anon' '--enable-login' '--enable-ntlm' '--disable-passdss' '--enable-sql' '--enable-ldapdb' '--disable-macos-framework' '--with-pam' '--with-saslauthd=/var/run/saslauthd' '--with-ldap' '--with-pgsql=/usr/include/postgresql' '--with-configdir=/etc/sasl:/usr/lib/sasl2' '--sysconfdir=/etc' '--with-devrandom=/dev/urandom' 'build_alias=x86_64-linux-gnu' 'host_alias=x86_64-linux-gnu' 'CFLAGS=-Wall -g -O2' 'LDFLAGS= -Wl,-z,defs' 'CPPFLAGS=' 'CXXFLAGS=-g -O2' 'FFLAGS=-g -O2'
